{
    "openapi": "3.0.0",
    "info": {
        "title": "Filmweeb API Documentation",
        "description": "Description of available endpoints of Filmweeb API",
        "contact": {
            "email": "admin@admin.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://my-default-host.com",
            "description": "Filmweeb API Server"
        }
    ],
    "paths": {
        "/title/{title_id}": {
            "get": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Get by title",
                "description": "URL from provider, get access token",
                "operationId": "providerAccess",
                "requestBody": {
                    "description": "Pass provider name",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "provider name"
                                ],
                                "properties": {
                                    "provider_name": {
                                        "type": "string",
                                        "example": "github"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Wrong credentials response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Sorry, wrong email address or password. Please try again"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}